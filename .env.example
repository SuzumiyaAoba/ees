# .env.example - EES Configuration Template
# Copy this file to .env and configure with your settings

# ============================================================================
# Application Configuration
# ============================================================================

# Node environment: development | production | test
NODE_ENV=development

# Server port
PORT=3000

# ============================================================================
# Embedding Provider Configuration
# ============================================================================

# Primary embedding provider
# Options: ollama | openai | google | cohere | mistral | azure
EES_PROVIDER=ollama

# ============================================================================
# Ollama Configuration (Default Provider)
# ============================================================================

# Ollama server URL
EES_OLLAMA_BASE_URL=http://localhost:11434

# Default model for embeddings
# Available models: nomic-embed-text, mxbai-embed-large, etc.
EES_OLLAMA_DEFAULT_MODEL=nomic-embed-text

# ============================================================================
# OpenAI Configuration
# ============================================================================

# OpenAI API key (required for OpenAI provider)
# Get your key from: https://platform.openai.com/api-keys
# EES_OPENAI_API_KEY=sk-your-api-key-here

# Default OpenAI model
# Options: text-embedding-3-small | text-embedding-3-large | text-embedding-ada-002
# EES_OPENAI_DEFAULT_MODEL=text-embedding-3-small

# Custom OpenAI base URL (optional, for OpenAI-compatible APIs)
# EES_OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================================================
# Google AI Configuration
# ============================================================================

# Google AI API key (required for Google provider)
# Get your key from: https://makersuite.google.com/app/apikey
# EES_GOOGLE_API_KEY=your-google-api-key

# Default Google model
# Options: embedding-001 | text-embedding-004
# EES_GOOGLE_DEFAULT_MODEL=text-embedding-004

# ============================================================================
# Cohere Configuration
# ============================================================================

# Cohere API key (required for Cohere provider)
# Get your key from: https://dashboard.cohere.ai/api-keys
# EES_COHERE_API_KEY=your-cohere-api-key

# Default Cohere model
# Options: embed-english-v3.0 | embed-multilingual-v3.0
# EES_COHERE_DEFAULT_MODEL=embed-english-v3.0

# ============================================================================
# Mistral Configuration
# ============================================================================

# Mistral API key (required for Mistral provider)
# Get your key from: https://console.mistral.ai/
# EES_MISTRAL_API_KEY=your-mistral-api-key

# Default Mistral model
# EES_MISTRAL_DEFAULT_MODEL=mistral-embed

# ============================================================================
# Azure OpenAI Configuration
# ============================================================================

# Azure OpenAI API key (required for Azure provider)
# EES_AZURE_API_KEY=your-azure-api-key

# Azure OpenAI endpoint
# EES_AZURE_ENDPOINT=https://your-resource.openai.azure.com

# Azure deployment name
# EES_AZURE_DEPLOYMENT=your-deployment-name

# Azure OpenAI resource name
# EES_AZURE_RESOURCE_NAME=your-resource-name

# Default Azure model
# EES_AZURE_DEFAULT_MODEL=text-embedding-3-small

# ============================================================================
# Database Configuration
# ============================================================================

# Database file path (libSQL)
# For file-based database:
EES_DATABASE_URL=./data/embeddings.db

# For in-memory database (testing only, data is lost on restart):
# EES_DATABASE_URL=:memory:

# Database connection pool size (optional, default: 10)
# DB_POOL_SIZE=10

# ============================================================================
# Cache Configuration
# ============================================================================

# Enable/disable caching (default: true)
EES_CACHE_ENABLED=true

# Maximum number of items in cache (default: 1000)
EES_CACHE_MAX_SIZE=1000

# Default TTL in milliseconds (optional)
# If not set, uses specific TTL per cache type:
# - Embeddings: 1 hour
# - Search results: 5 minutes
# - Models list: 24 hours
# - Provider status: 30 seconds
# EES_CACHE_DEFAULT_TTL=3600000

# ============================================================================
# Observability & Logging
# ============================================================================

# Logging level
# Options: trace | debug | info | warn | error | fatal
LOG_LEVEL=info

# Pretty print logs (enable for development, disable for production)
LOG_PRETTY=true

# Service name for logs and metrics
SERVICE_NAME=ees-api

# Service version
SERVICE_VERSION=1.0.0

# Deployment environment (for metrics and logs)
DEPLOYMENT_ENVIRONMENT=development

# Health check mode
# Options: comprehensive | simple
# comprehensive: checks all dependencies (database, ollama, memory, disk)
# simple: basic health check only
# EES_HEALTH_MODE=comprehensive

# ============================================================================
# Security Configuration (Optional)
# ============================================================================

# CORS origins (comma-separated list)
# Leave empty to allow all origins (not recommended for production)
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# API key for authentication (if implemented)
# API_KEY=your-secret-api-key-here

# ============================================================================
# Rate Limiting (Optional, if implemented)
# ============================================================================

# Enable rate limiting
# EES_RATE_LIMIT_ENABLED=true

# Rate limit window in milliseconds (default: 60000 = 1 minute)
# EES_RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window (default: 100)
# EES_RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Performance Tuning (Optional)
# ============================================================================

# Maximum request body size (default: 1mb)
# MAX_REQUEST_SIZE=10mb

# Request timeout in milliseconds (default: 30000)
# REQUEST_TIMEOUT=30000

# Maximum batch size for batch embedding operations (default: 100)
# MAX_BATCH_SIZE=100

# ============================================================================
# Development & Testing
# ============================================================================

# Enable development mode features
# DEV_MODE=true

# Enable API request/response logging
# API_DEBUG=true

# Enable SQL query logging
# SQL_DEBUG=true
