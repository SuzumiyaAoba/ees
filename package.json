{
  "name": "ees",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/core && (npm run build --workspace=packages/cli || echo 'CLI build failed, continuing...') && npm run build --workspace=@ees/api && npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/api",
    "dev": "npm run dev --workspace=packages/api",
    "dev:web": "npm run dev --workspace=packages/web",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "format": "biome check --write .",
    "lint": "biome check .",
    "type-check": "npm run type-check --workspaces --if-present",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "SuzumiyaAoba",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@total-typescript/ts-reset": "^0.6.1",
    "@tsconfig/strictest": "^2.0.5",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.4.0",
    "@types/pdf-parse": "^1.1.5",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "nodemon": "^3.1.10",
    "npm-run-all2": "^8.0.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.17",
    "@ai-sdk/azure": "^2.0.32",
    "@ai-sdk/cohere": "^2.0.10",
    "@ai-sdk/google": "^2.0.14",
    "@ai-sdk/mistral": "^2.0.14",
    "@ai-sdk/openai": "^2.0.31",
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.0",
    "@libsql/client": "^0.15.15",
    "ai": "^5.0.45",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "effect": "^3.17.13",
    "hono": "^4.9.7",
    "ml-distance": "^4.0.1",
    "ollama": "^0.5.17",
    "ollama-ai-provider-v2": "^1.3.1",
    "pdf-parse": "^1.1.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "zod": "^4.1.8"
  }
}
