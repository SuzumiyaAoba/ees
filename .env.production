# .env.production
# Production environment configuration template for EES
# Copy this file to .env and configure with your production settings

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=production
PORT=3000

# ============================================================================
# Embedding Provider Configuration
# ============================================================================
# Available providers: ollama, openai, google, cohere, mistral, azure
EES_PROVIDER=ollama

# Ollama Configuration (Default provider)
EES_OLLAMA_BASE_URL=http://localhost:11434
EES_OLLAMA_DEFAULT_MODEL=nomic-embed-text

# OpenAI Configuration
# EES_OPENAI_API_KEY=your-openai-api-key-here
# EES_OPENAI_DEFAULT_MODEL=text-embedding-3-small

# Google AI Configuration
# EES_GOOGLE_API_KEY=your-google-api-key-here
# EES_GOOGLE_DEFAULT_MODEL=text-embedding-004

# Cohere Configuration
# EES_COHERE_API_KEY=your-cohere-api-key-here
# EES_COHERE_DEFAULT_MODEL=embed-english-v3.0

# Mistral Configuration
# EES_MISTRAL_API_KEY=your-mistral-api-key-here
# EES_MISTRAL_DEFAULT_MODEL=mistral-embed

# Azure OpenAI Configuration
# EES_AZURE_API_KEY=your-azure-api-key-here
# EES_AZURE_RESOURCE_NAME=your-azure-resource-name
# EES_AZURE_DEFAULT_MODEL=text-embedding-3-small

# ============================================================================
# Database Configuration
# ============================================================================
EES_DATABASE_URL=./data/embeddings.db

# ============================================================================
# Observability & Logging
# ============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Pretty print logs (disable in production for structured logging)
LOG_PRETTY=false

# Service metadata for observability
SERVICE_NAME=ees-api
SERVICE_VERSION=1.0.0
DEPLOYMENT_ENVIRONMENT=production

# ============================================================================
# Security Configuration (Optional)
# ============================================================================
# CORS origins (comma-separated list)
# CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# API key for authentication (if implemented)
# API_KEY=your-secret-api-key-here

# ============================================================================
# Performance Tuning (Optional)
# ============================================================================
# Maximum request body size (default: 1mb)
# MAX_REQUEST_SIZE=10mb

# Request timeout in milliseconds (default: 30000)
# REQUEST_TIMEOUT=30000

# Database connection pool size (default: 10)
# DB_POOL_SIZE=10
